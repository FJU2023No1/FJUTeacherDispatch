<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FJUTeacherDispatch"
        tools:targetApi="31" >

        <activity
            android:name=".main.view.FJUTDActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/fju_td_app_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.view.FJUTDLoginWebActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme" />
        <activity
            android:name=".main.view.FJUTDRegisterActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme" />
        <activity
            android:name=".main.view.MainTabbarActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme" />
        <activity
            android:name=".main.view.TeacherAddScheduleActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme" />
        <activity
            android:name=".main.view.NotificationActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme" />
        <activity
            android:name=".main.view.SettingActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme" />
        <activity
            android:name=".tool.SpinnerActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/fju_td_app_theme_transparent_dialog_style" />
    </application>

</manifest>